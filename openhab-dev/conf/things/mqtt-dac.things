// DAC Bridge Thing - controls HRV output via Waveshare AD/DA board
// Subscribes to power commands and publishes state

Thing mqtt:topic:dac "DAC Bridge" (mqtt:broker:mosquitto) {
    Channels:
        Type dimmer : power "Power" [
            commandTopic="homehab/dac/power/set",
            stateTopic="homehab/dac/power/state",
            min=0,
            max=100
        ]
        Type number : voltage "Voltage" [
            stateTopic="homehab/dac/voltage/state"
        ]
}
