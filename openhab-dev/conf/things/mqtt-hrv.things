// HRV Bridge Thing - controls HRV output via PWM or DAC
// Subscribes to power commands and publishes state

Thing mqtt:topic:hrv "HRV Bridge" (mqtt:broker:mosquitto) {
    Channels:
        Type dimmer : power "Power" [
            commandTopic="homehab/hrv/power/set",
            stateTopic="homehab/hrv/power/state",
            min=0,
            max=100
        ]
}
