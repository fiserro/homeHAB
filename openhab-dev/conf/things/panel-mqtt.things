// MQTT channels for ESP32 Panel communication
// Panel commands are linked directly to existing HabState items

// Panel -> OpenHAB (commands from panel linked to existing items)
Thing mqtt:topic:mosquitto:panel_commands "ESP32 Panel Commands" (mqtt:broker:mosquitto) {
    Channels:
        // Panel "MANUAL" button -> temporaryManualMode (not permanent manualMode!)
        Type switch : tempManualMode "Panel Temp Manual Mode" [
            stateTopic="homehab-dev/panel/temporaryManualMode/command"
        ]
        // Panel "BOOST" button -> temporaryBoostMode
        Type switch : boostMode "Panel Boost Mode" [
            stateTopic="homehab-dev/panel/temporaryBoostMode/command"
        ]
        // Panel slider -> manualPower
        Type number : manualPower "Panel Manual Power" [
            stateTopic="homehab-dev/panel/manualPower/command"
        ]
}
