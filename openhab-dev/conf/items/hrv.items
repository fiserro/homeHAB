// HRV Configuration Items
// These items are loaded by HrvConfigLoader and provide runtime configuration
// Default values match the defaults in HrvConfig interface

Group gHrvConfig "HRV Configuration"

// Threshold values
Number hrv_config_humidity_threshold "Humidity Threshold [%d %%]" (gHrvConfig)
Number hrv_config_co2_threshold "CO2 Threshold [%d ppm]" (gHrvConfig)

// Power levels for different modes (0-100%)
Number hrv_config_smoke_power "Smoke Detector Power [%d %%]" (gHrvConfig)
Number hrv_config_window_open_power "Window Open Power [%d %%]" (gHrvConfig)
Number hrv_config_manual_default_power "Manual Mode Default Power [%d %%]" (gHrvConfig)
Number hrv_config_boost_power "Boost Mode Power [%d %%]" (gHrvConfig)
Number hrv_config_exhaust_hood_power "Exhaust Hood Power [%d %%]" (gHrvConfig)
Number hrv_config_humidity_power "Humidity Mode Power [%d %%]" (gHrvConfig)
Number hrv_config_co2_power "CO2 Mode Power [%d %%]" (gHrvConfig)
Number hrv_config_base_power "Base Power [%d %%]" (gHrvConfig)

// Timeouts
Number hrv_config_temporary_mode_timeout_minutes "Temporary Mode Timeout [%d min]" (gHrvConfig)
